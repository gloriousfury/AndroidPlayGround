<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taiyeoloriade.androidplayground">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RetrofitActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.SnackBarActivity" />
        <activity
            android:name=".activity.AppBarActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.CustomTabsActivity" />
        <activity android:name=".activity.AndroidSqlLiteActivity" />
        <activity android:name=".activity.TodoActivity" />
        <activity android:name=".activity.SingleTodoActivity" />
        <activity android:name=".activity.TodoFragmentActivity" />
        <activity
            android:name=".activity.ViewPagerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.PaymentActivity" />
        <activity
            android:name=".activity.ChatRoomActivity"
            android:label="@string/title_activity_chat_room"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login2"></activity>
    </application>

</manifest>